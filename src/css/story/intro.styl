.intro
	margin 0 auto
	padding 8rem 0rem 0rem 0rem
	.opening-chart
		margin-bottom 4rem

	.hed
		font-family $lyon-display
		font-size 94px
		max-width 500px
		padding-top 5rem
		color #291a03
		max-width 900px
	.byline-wrapper
		display flex
		flex-wrap wrap
		justify-content center
		margin-bottom 3rem
		.intro__time
			font-weight 600
			margin 0
			margin-right 1.5rem
			font-family $atlas
			font-size 12px
		.intro__byline
			margin 0
			font-family $atlas
			font-size 12px
			font-weight 400
			a
				font-weight 400
	&__hed
		max-width 60rem
		margin 0 auto
		text-align center
		font-family $lyon-display
		font-size 28px
		line-height 1.5
		max-width 500px

	&__dek
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center

	&__byline
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center


	&__time
		display block
		max-width $column-width
		margin 1rem auto 3rem auto
		text-align center

.intro
		padding-top 8rem
    &.story
	    margin 0 auto
	    padding 6rem 0rem 1rem 0rem
